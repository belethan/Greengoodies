<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Green Goodies{% endblock %}</title>

    {# --- Bootstrap CSS --- #}
    <link
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
        rel="stylesheet"
    >

    {# --- App CSS compilé depuis /assets/styles/app.css --- #}
    <link rel="stylesheet" href="{{ asset('styles/app.css') }}">

    {% block stylesheets %} {% endblock %}
</head>

<body>
{# === HEADER === #}
<header class="navbar navbar-expand-lg navbar-light py-3">
    <div class="container">
        <a class="navbar-brand d-flex align-items-center" href="{{ path('app.principale') }}">
            <img src="{{ asset('img/static/logo.png') }}" alt="logo" class="me-2" style="height:32px;">
        </a>

        {# --- Bouton burger pour mobile --- #}
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        {#  code lien : {{ path('produit_index') }}#}
        {#  TODO: penser à changer mettre en place les liens #}
        {# --- Menu principal --- #}
        <div class="collapse navbar-collapse" id="navbarNav">
            <nav class="ms-auto navbar-nav d-flex align-items-center gap-lg-4">
                <a class="nav-link" href="#">Nos produits</a>

                {% if app.user %}
                    <a class="nav-link" href="#">Mon panier</a>

                    {# --- Menu déroulant Mon Compte --- #}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="accountDropdown" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            {{ app.user.username }}
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="accountDropdown">
                            <li><a class="dropdown-item" href="#">Mon profil</a></li>
                            <li><a class="dropdown-item" href="#">Mes commandes</a></li>
                        </ul>
                    </li>

                    <a class="nav-link" href="#">Déconnexion</a>
                {% else %}
                    <a class="nav-link" href="#">Connexion</a>
                {% endif %}
            </nav>
        </div>
    </div>
</header>

{# === MESSAGES FLASH === #}
<div class="container mt-3">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} shadow-sm fade show" role="alert">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
</div>

{# === CONTENU PRINCIPAL === #}
<main class="container mt-5 mb-5">
    {% block body %}{% endblock %}
</main>

{# === FOOTER === #}
<footer class="text-end mt-auto d-flex align-items-center">
    <div class="container">
        © GreenGoodies - {{ "now"|date("Y") }}
    </div>
</footer>

{# --- Bootstrap JS --- #}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

{# --- Import de ton JS Symfony (app.js → global.js inclus) --- #}
{{ importmap('app') }}

{% block javascripts %}{% endblock %}
</body>
</html>
