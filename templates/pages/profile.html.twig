{% extends 'main.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}
<div class="container login-container">
    <div class="row align-items-stretch justify-content-center">

        {# --- Image gauche --- #}
        <div class="col-12 col-md-6 d-flex justify-content-center align-items-center image-container">
            <img src="{{ asset('img/static/feuillages.png') }}" alt="Fleurs" class="img-fluid login-image">
        </div>

        {# --- Formulaire droite --- #}
        <div class="col-12 col-md-6 d-flex align-items-start justify-content-start h-100 form-container">
            <div class="card p-4">
                <h4 class="text-left mb-4">Mon Profil</h4>

                {{ form_start(registrationForm) }}

                <div class="mb-3">
                    {{ form_label(registrationForm.nom, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(registrationForm.nom) }}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(registrationForm.prenom) }}
                    {{ form_widget(registrationForm.prenom, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(registrationForm.prenom) }}
                </div>

                <div class="mb-3">
                    {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(registrationForm.email) }}
                </div>

                <div class="mb-3">
                    {{ form_label(registrationForm.plainPassword, 'Nouveau mot de passe', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(registrationForm.plainPassword) }}
                </div>

                <button type="submit" class="btn btn-success w-100">Mettre Ã  jour</button>

                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
