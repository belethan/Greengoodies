{% extends 'main.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="container login-container">
        <div class="row align-items-stretch justify-content-center">

            {# --- Image gauche --- #}
            <div class="col-12 col-md-6 d-flex justify-content-center align-items-center image-container">
                <img src="{{ asset('img/static/feuillages.png') }}" alt="Fleurs" class="img-fluid login-image">
            </div>

            {# --- Formulaire droite --- #}
            <div class="col-12 col-md-6 d-flex align-items-start justify-content-start h-100 form-container">
                <div class="card p-4">
                    <h4 class="text-left mb-4">Inscription</h4>

                    {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate'}}) }}
                    <div class="form-group mb-3">
                        {{ form_label(registrationForm.nom) }}
                        {{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(registrationForm.nom) }}
                    </div>

                    <div class="form-group mb-3">
                        {{ form_label(registrationForm.prenom) }}
                        {{ form_widget(registrationForm.prenom, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(registrationForm.prenom) }}
                    </div>

                    <div class="form-group mb-3">
                        {{ form_label(registrationForm.email) }}
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(registrationForm.email) }}
                    </div>

                    <div class="form-group mb-3">
                        {{ form_label(registrationForm.plainPassword.first, 'Mot de passe') }}
                        {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(registrationForm.plainPassword.first) }}
                    </div>

                    <div class="form-group mb-3">
                        {{ form_label(registrationForm.plainPassword.second, 'Confirmez le mot de passe') }}
                        {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(registrationForm.plainPassword.second) }}
                    </div>

                    <div class="form-group form-check mb-3">
                        {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                        {{ form_label(registrationForm.agreeTerms, 'J’accepte les conditions d’utilisation', {'label_attr': {'class': 'form-check-label'}}) }}
                        {{ form_errors(registrationForm.agreeTerms) }}
                    </div>

                    <div class="form-group mt-4">
                        <button type="submit" class="btn btn-primary w-100">s'inscrire</button>
                    </div>
                    {{ form_end(registrationForm) }}

                    <div class="mt-3 text-center">
                        <a href="{{ path('app.login') }}">Déjà un compte ? Se connecter</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
