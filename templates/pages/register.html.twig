{# templates/pages/register.html.twig #}
{% extends 'main.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-6">
            <img src="{{ asset('img/static/plantes.png') }}" alt="Plantes" class="img-fluid">
        </div>
        <div class="col-md-6">
            <h2>Inscription</h2>
            {{ form_start(form) }}
            {{ form_row(form.nom) }}
            {{ form_row(form.prenom) }}
            {{ form_row(form.email) }}
            {{ form_row(form.password) }}
            {{ form_row(form.confirmPassword) }}
            {{ form_row(form.agreeTerms) }}
            <button type="submit" class="btn btn-dark">{{ form.submit.vars.label }}</button>
            {{ form_end(form) }}
            <div class="mt-3">
                <a href="{{ path('app.login') }}">Déjà un compte ? Se connecter</a>
            </div>
        </div>
    </div>
{% endblock %}
